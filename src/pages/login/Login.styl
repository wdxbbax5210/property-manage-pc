.login
	position: fixed;
	top:0;
	bottom: 0;
	right: 0;
	left: 0;
	background-color: rgba(0,0,0,0.8);
	z-index: 10;
	.title
		text-align: center;
		font-size: 14px;
		color: #333;
		height: 40px;
		line-height: 40px;
	.content
		width: 400px;
		height: 280px;
		margin: 0 auto;
		background-color: #fff;
		position:absolute;
		top:50%;
		margin-top:-140px;
		left: 0;
		right: 0;
		border-radius: 10px;
		.input
			margin: 0 30px;
			input
				height: 34px;
				line-height: 34px;

	.confirm
		width: 100%;
		margin-top: 20px;
		height: 34px;
		line-height: 34px;
		font-size: 14px;
	.ant-form
		margin-top: 20px